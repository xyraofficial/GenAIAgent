<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GenAIAgent" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- iOS-like Color Palette -->
        <item name="colorPrimary">#007AFF</item> <!-- iOS Blue -->
        <item name="colorOnPrimary">#FFFFFF</item>
        <item name="android:windowBackground">#F2F2F7</item> <!-- iOS Grouped Background -->
        <item name="android:navigationBarColor">#FFFFFF</item>
        <item name="android:windowLightStatusBar">true</item>
        
        <!-- Smooth Transitions -->
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <!-- iOS Style Button -->
    <style name="Widget.App.Button.iOS" parent="Widget.Material3.Button">
        <item name="cornerRadius">12dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="backgroundTint">#007AFF</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- iOS Style EditText -->
    <style name="Widget.App.EditText.iOS" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_ios_input</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">17sp</item>
    </style>
</resources>