<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GenAIAgent" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- ChatGPT Ultra-Dark AMOLED inspired colors -->
        <item name="colorPrimary">#FFFFFF</item>
        <item name="colorOnPrimary">#000000</item>
        <item name="android:windowBackground">#000000</item> <!-- True Black -->
        <item name="android:navigationBarColor">#000000</item>
        <item name="android:statusBarColor">#000000</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <item name="colorSurface">#000000</item>
        <item name="colorOnSurface">#FFFFFF</item>
        <item name="colorSurfaceVariant">#171717</item>
        <item name="colorOnSurfaceVariant">#ECECF1</item>
        <item name="colorOutline">#2D2D2D</item>

        <!-- Fix potential crashes with Material components -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- App theme for settings activity -->
    <style name="Theme.GenAIAgent.Settings" parent="Theme.GenAIAgent">
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="CircleImageView" parent="">
        <item name="cornerSize">50%</item>
    </style>
</resources>